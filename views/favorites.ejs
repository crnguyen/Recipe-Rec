<div class="main">
    <h2 class="favoritesTitles">Favorited Recipes</h2>
    <hr />

<div class="favoritesPage">
<% if(favorites.length<=0){ %>
    <h5>Oh no! Looks like you don't have any favorites yet. Check out the <a class="a" href="/recipes" class="link">RECIPES</a> page to add some favorites! </h5>
<% } else { %>
    <% favorites.forEach(f => { %>
        <h4 class="favoritesRecipes" style="font-weight: 300; font-family: Raleway"><%= f.name %></h4> 
        <h6><a class="a" href="/details/<%=f.recipeId %>">Link to Details</a></h6>

        <!-- form to update recipe name  -->
        <form method="POST" action="/favorites/<%=f.name%>?_method=PUT">
            <input class="form-control" style="text-align:center; font-size:15px" id="new-name" type="name" name="name" value="<%= f.name %>">
            <button class="formButton" type="submit">Update Recipe Name</button>
        </form>
        <br>

        <!-- form to delete recipe  -->
        <form method="POST" action="/favorites/<%= f.name %>/?_method=DELETE">
            <button class="formButton" type="submit">Remove this recipe</button>
        </form>
    <% }) %>
<% } %>
</div>
</div>
